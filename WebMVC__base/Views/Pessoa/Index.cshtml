@{
    ViewData["Title"] = "Index";
}

<h3>Cadastro de Pessoas</h3>
<hr />
<div>
    <div style="float: left">
        <a href="@Url.Action("Create", "Pessoa")">
            <span class="btn btn-info btn-lg">Novo</span>
        </a>
        <br />
        <br />
    </div>
    <div style="float: left">
        <form asp-action="Index">
            <div class="form-group">
                Pesquisa -  (nome): @Html.TextBox("SearchString")
                <input type="submit" value="Filtrar" />
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-hover table-responsive ">
    <tr>
        <th>ID</th>
        <th>@Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.nomeParam })</th>
        <th>E-Mail</th>
        <th>Telefone</th>
        <th></th>
    </tr>

    @* Ref: https://www.w3schools.com/icons/tryit.asp?filename=trybs_ref_glyph_pencil*@

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Pessoa", new { @id=@Model.Rows[i][0] } )">
                    <span class="glyphicon glyphicon-pencil" title="Editar"></span>
                </a>&nbsp;&nbsp;
                <a href="@Url.Action("Delete","Pessoa", new { @id=@Model.Rows[i][0] } )">
                    <span class="glyphicon glyphicon-trash" title="Excluir"></span>
                </a>
            </td>

        </tr>
    }
</table>
<hr />

